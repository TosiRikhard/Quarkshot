<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Quarkshot.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Quarkshot.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Quarkshot">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,Auto,*">
        <Button Grid.Row="0" Content="Capture Windows" Command="{Binding CaptureWindowsCommand}" Margin="10"/>
        <Button Grid.Row="1" Content="Save Images" Command="{Binding SaveImagesCommand}" Margin="10"/>
        <ListBox Grid.Row="2" ItemsSource="{Binding WindowLayers}" Margin="10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="Auto,*">
                        <Image Grid.Column="0" Source="{Binding Image}" Width="100" Height="60" Stretch="Uniform" Margin="0,0,10,0"/>
                        <TextBlock Grid.Column="1" Text="{Binding Title}" VerticalAlignment="Center"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>

</Window>